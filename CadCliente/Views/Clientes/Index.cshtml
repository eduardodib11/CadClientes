@model IEnumerable<CadCliente.Models.ClienteModel>

@{
    ViewData["Title"] = "Lista";
}

<div class="text-center">
    <h2 class="display-4">Controle de Clientes</h2>
    <p>Sitema de Controle de Clientes <a href="https://crmall.com/">CRMALL - Soluções em CRM e BI</a>.</p>
</div>
<br />
<br />
<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Adicionar</a>
</p>
<table class="table table-striped table-sm">
    <caption>Lista de Clientes</caption>
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-active">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @ServicesRepository.ListaSexo().FirstOrDefault(s => s.Value == item.Sexo).Text.Substring(4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td class="text-center" style="width: 260px;">
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-success float-left" role="button">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-warning float-none" role="button">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger float-right" role="button">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
